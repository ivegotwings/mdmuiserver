{
  "entrypoint": "index.html",
  "shell": "src/elements/app-main/main-app.html",
  "fragments": [
  ],
  "sources": [
   "images/**/*",
   "sampledata/**/*",
   "offline-data/**/*",
   "tenant-configs/**/*",
   "src/shared/*.js",
   "src/elements/**/*.html",
   "src/**/*",
   "bower.json",
   "app.js",
   "logs/empty.json",
   ".babelrc",
   "service-worker.js"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js",
    "bower_components/polymer/**/*",
    "!bower_components/web-component-tester/**/*",
    "bower_components/accessibility-developer-tools/**/*",
    "bower_components/async/**/*",
    "bower_components/chai/**/*",
    "bower_components/lodash/**/*",
    "bower_components/mocha/**/*",
    "bower_components/sinon-chai/**/*",
    "bower_components/sinonjs/**/*",
    "bower_components/stacky/**/*",
    "bower_components/test-fixture/**/*"
  ],
  "lint": {
    "rules": ["polymer-2-hybrid"],
    "ignoreWarnings": [
                        "multiple-doc-comments",
                        "unknown-polymer-behavior",
                        "undefined-elements", 
                        "set-unknown-attribute", 
                        "databind-with-unknown-property", 
                        "style-into-template", 
                        "databinding-calls-must-be-functions"
                      ]
  },
  "builds": [
    { "preset": "es5-bundled" },
    { "preset": "es6-unbundled" }
  ]
}