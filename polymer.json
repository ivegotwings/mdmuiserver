{
  "serverSources": [
    "app.js",
    "index.html",
    "src/server/**/*",
    "src/shared/**/*",
    "src/views/**/*",
    "src/resources/**/*",
    "logs/**/*",
    "offline-data/**/*",
    "ecosystem.config.js",
    "package.json",
    "polymer.json"
  ],
  "lint": {
    "rules": ["polymer-3"],
    "ignoreWarnings": [
      "set-unknown-attribute",
      "databind-with-unknown-property"
    ]
  }
}