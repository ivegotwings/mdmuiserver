{
  "entrypoint": "index.html",  
   
  "sources": [
   "images/**/*",
   "sampledata/**/*",
   "offline-data/**/*",
   "tenant-configs/**/*",
   "src/data/**/*",
   "src/images/**/*",
   "src/resources/**/*",
   "src/server/**/*",
   "src/shared/**/*",
   "src/views/**/*",
   "app.js",
   "service-worker.js",
   "ecosystem.config.js"
  ],
  "extraDependencies": [   
    "src/elements/**/*", 
    "src/scripts/**/*", 
    "bower_components/**/*",
    "!bower_components/*/test/**/*",
    "!bower_components/*/demo/**/*",
    "!bower_components/moment/**/*",
    "!bower_components/web-component-tester/**/*",    
    "bower_components/moment/min/moment-with-locales.min.js",
    "bower_components/moment/min/moment.min.js",
    "bower_components/moment/moment.js",
    "node_modules/jsonpath/jsonpath.min.js"
  ],
  "lint": {
    "rules": [
      "polymer-2-hybrid"
    ],
    "ignoreWarnings": [
      "multiple-doc-comments",
      "unknown-polymer-behavior",
      "undefined-elements",
      "set-unknown-attribute",
      "databind-with-unknown-property",
      "style-into-template",
      "databinding-calls-must-be-functions"
    ]
  }
}