{
    "viewMode": "Tabular",
    "title": "Simple Data Table",
    "mode": "read",
    "header" : {
      "displayTitle" : false,
      "defaultValue" :  "Simple Data Table"
    },
    "tabular": {
        "settings": {

            "isMultiSelect": true,
            "actions":[
                {
                    "name":"delete",
                    "icon":"pebble-icons:Delete",
                    "eventName":"delete-item"
                },
                {
                    "name":"edit",
                    "icon":"pebble-md-icons:Edit",
                    "eventName":"edit-item"
                }
            ]
        },
        "columns": [
            {
                "header": "Short Name",
                "name": "shortName",
                "sortable": true,
                "filterable": false,
                "displayType":"textbox",
                "maxLength":7
            },
            {
                "header": "Long Name",
                "name": "longName",
                "sortable": false,
                "filterable": true,
                "displayType":"textarea",
                "maxLength":10
            }
        ]
    }
}